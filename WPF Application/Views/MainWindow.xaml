<Window x:Class="KallitheaKlone.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KallitheaKlone.WPF.Views"
        xmlns:ViewModels="clr-namespace:KallitheaKlone.ViewModels;assembly=KallitheaKlone"
        mc:Ignorable="d"
        Title="MainWindow" Height="612" Width="923" Loaded="Window_Loaded">
    <Window.DataContext>
        <ViewModels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl Margin="0,30,0,0" ItemsSource="{Binding Repositories}">
            <TabControl.ItemTemplate>
                <!-- this is the header template-->
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <!-- this is the body of the TabItem template-->
                <DataTemplate>
                    <Grid>
                        <!-- Column Definitions -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <ListBox x:Name="Branches" Focusable="False" Margin="0" Grid.Column="0" ItemsSource="{Binding Branches}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid x:Name="BranchesTemplate" Height="30" Margin="0,0">
                                        <TextBlock Text="{Binding Name}" Margin="5" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Main Column -->
                        <Grid x:Name="MainGrid" Margin="0" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Top Row -->
                            <DataGrid Grid.Row="0" ItemsSource="{Binding ChangeSets, Mode=OneTime}" AutoGenerateColumns="False" Margin="0" SelectionMode="Single"
                                      SelectionUnit="FullRow" CanUserResizeRows="False" CanUserReorderColumns="False" CanUserDeleteRows="False" CanUserAddRows="False"
                                      CanUserSortColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Revision" Width="75" IsReadOnly="True" Binding="{Binding Number, Mode=OneTime}"/>
                                    <DataGridTextColumn Header="Message" Width="250" IsReadOnly="True" Binding="{Binding Message, Mode=OneTime}"/>
                                    <DataGridTextColumn Header="Timestamp" Width="150" IsReadOnly="True" Binding="{Binding Timestamp, Mode=OneTime}"/>
                                    <DataGridTextColumn Header="Author" Width="150" IsReadOnly="True" Binding="{Binding Author, Mode=OneTime}"/>
                                    <DataGridTextColumn Header="Hash" Width="1*" IsReadOnly="True" Binding="{Binding Hash, Mode=OneTime}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

    </Grid>
</Window>
